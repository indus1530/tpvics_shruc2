                <!-- a102  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVa102"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_a102" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:text="@string/a102" />

                        <RadioGroup
                            android:id="@+id/a102"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/a10201"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checked="@{form.a102.equals(`1`)}"
                                android:onClick="@{()->form.setA102(`1`)}"
                                android:text="@string/a10201" />

                            <RadioButton
                                android:id="@+id/a10202"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checked="@{form.a102.equals(`2`)}"
                                android:onClick="@{()->form.setA102(`2`)}"
                                android:text="@string/a10202" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


