                                app:minValue="1"
                                app:type="range" />

                            <CheckBox
                                android:id="@+id/a11297"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:checked="@{form.a11297.equals(`97`)}"
